    -->

    <style name="Theme.Instagram_Clone.FormEditTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="Theme.Instagram_Clone.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Theme.Instagram_Clone.TextviewBase" parent="Theme.Instagram_Clone.FormContainer">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Theme.Instagram_Clone.TextviewBase.Form">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="Theme.Instagram_Clone.Link" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue_enabled</item>
    </style>

    <style name="Theme.Instagram_Clone.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="Theme.Instagram_Clone.TextViewProfile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.Instagram_Clone.Button.White" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
